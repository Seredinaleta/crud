<main class='main'>
  <div class='main_content'>
    <header class='header'>
      <a href='/'>
        <img src='/svg/cross-back.svg' alt='' />
      </a>
    </header>
    <h1 class='title title--center title--small'>Назвіть
      плейліст</h1>
    <form
      
      method='POST'
      action='/spotify-create{{#if data.isMix}}?isMix=true{{/if}}'
      class='form'
    >
      <input
        type='text'
        class='form_field'
        placeholder='Назва плейліста'
        name="name"
        {{!-- required --}}
      />
      <button class='form_button'>Створити</button>
    </form>
  </div>
</main>