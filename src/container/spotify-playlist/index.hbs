<main class='main'>
  {{#with data}}
    <div class='main_content'>

      <h1 class='title title--center'>{{name}}</h1>
      <ul class='track_list'>

        <li class='add_button'>
          <img src='/svg/add.svg' alt='' />
          <a href='/spotify-playlist-add?id={{playlistId}}'>
            <strong class='track_name'>Додати до плейлістів</strong>
          </a>
        </li>

        {{#each tracks}}
          <li class='track'>
            <img src='{{image}}' alt='{{name}}' />
            <div class='track_content'>
              <strong class='track_name'>{{name}}</strong>
              <em class='track_author'>{{author}}</em>
            </div>
            <a href='/spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}'>
              <img src='/svg/delete.svg' alt='' />
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/with}}
</main>